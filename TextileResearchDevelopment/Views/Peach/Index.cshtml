            buttons: [],
            "processing": true,
            "ajax":
            {
                "url": "/Peach/GetData",
                "type": "GET",
                "dataType": "JSON"
            },
            "pageLength": 25,
            "autoWidth": false,
            "scrollY": '20vh',
            "scrollX": true,
            "Sorting": true,
            "searching": true,
            "destroy": true,
            "select": {
                style: 'single'
            },
            "columnDefs": [
                {
                    "targets": [0],
                    "searchable": false,
                    "orderable": false,
                },
                {
                    "targets": [1, 2, 3, 4, 5],
                    "visible": false,
                    "searchable": false
                },
                {
                    "targets": "_all",
                    "width": "100px"
                }

            ],

            "columns": [
                {
                    "searchable": false,
                    "render": function (data, type, full, meta) {
                        return Peachtable.data().count();
                    }
                },
                { "data": "Id" },
                { "data": "fabric.Id" },
                { "data": "fabric.ProcessString" },
                { "data": "fabric.ProcessText" },
                { "data": "fabric.ColorString" },
                { "data": "fabric.BarCode" },
                { "data": "fabric.buyer.BuyerName" },
                { "data": "fabric.fb.FabricTypeName" },
