        $('#Peachtable tbody').on('click', 'tr', function () {

            if ((Peachtable.data().any())) {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                    Reset();
                }
                else {
                    Peachtable.$('tr.selected').removeClass('selected');
                    Reset();
                    $(this).addClass('selected');
                    var rowdata = Peachtable.row(this).data();
                    if (rowdata.ProcessString != "") {
                        var res = "";
                        var split_ProcessString = rowdata.fabric.ProcessString.split(",");
                        var split_ProcessText = rowdata.fabric.ProcessText.split("->");
                        var split_ColorString = rowdata.fabric.ColorString.split(",");

                        for (var i = 0; i < split_ProcessString.length; i++) {
                            if (split_ColorString[i] == "0") {
                                if (res == "")
                                    res += "<span class='blue'>" + split_ProcessText[i] + "</span>";
                                else
                                    res += "<span class='blue'>->" + split_ProcessText[i] + "</span>";
                            }
                            else {
                                if (res == "")
                                    res += "<span class='green'>" + split_ProcessText[i] + "</span>";
                                else
                                    res += "<span class='green'>->" + split_ProcessText[i] + "</span>";
                            }
