<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Textile Research Development</title>
    @RenderSection("head", required: false)
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    @*@Scripts.Render("~/bundles/dx")*@
    @*@Scripts.Render("~/bundles/fileExport")*@
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:midnightblue; ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="ActionLinkBar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
                <p id="SignOutUserName" style="color:white; display:none"></p>
                <a id="SignOutBtn" style="float:right;margin-top:1%" href="#" class="btn btn-danger btn-sm">
                    <span class="glyphicon glyphicon-log-out"></span> Log out
                </a>
            </div>
        </div>
    </div>
    <div class="container body-content" id="MainDiv">
        @RenderBody()
        <hr />
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dataTables")
    @RenderSection("scripts", required: false)
</body>
</html>


<script type="text/javascript">


    $(document).ready(function () {

        debugger;

        GetUserAccess();

        function GetUserAccess() {

            $.ajax({
                url: "/Home/GetUserAccess",
                type: 'GET',
                dataType: "json",
                success: function (result) {
                    if (result != null)
                    {
                        if (result != "") {
                            var result = result.split(',');
                            for (let i = 0; i < result.length; i++)
                            {
                                if (parseInt(result[i]) == 0)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Report", "Index", "Report", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 1)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Fabric", "Index", "Fabric", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 2)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Knit", "Index", "Knitting", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 3)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Wash", "Index", "CW", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 4)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Heat", "Index", "HSP", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 5)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Singe", "Index", "Singeing", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 6)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Dye", "Index", "Dyeing", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 7)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Dryer", "Index", "Dryer", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 8)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Stenter", "Index", "Stenter", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 9)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Compact", "Index", "Compacting", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 10)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Peach", "Index", "Peach", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 11)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Brush", "Index", "Brush", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 12)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Print", "Index", "PrintInfo", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 13)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("QC", "Index", "QC", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                                if (parseInt(result[i]) == 14)
                                {
                                    $("#ActionLinkBar ul").append('<li>@Ajax.ActionLink("Role", "Index", "UserManagement", new AjaxOptions { UpdateTargetId = "MainDiv", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>');
                                }
                            }
                        }
                    }
                    else
                    {
                        alert("Connection Problem!");
                        signout();
                    }
                }
            });

        }

        $('#SignOutBtn').click(function (){
            signout();
        });

        function signout()
        {
            $.ajax({
                url: "/Home/LogOut",
                type: 'GET',
                dataType: "json",
                success: function (result) {
                    if (result == "Success")
                    {
                        window.location.href = "/Home/LoginForm";
                    }
                    else
                    {
                        alert("LogOut Is Failed!!!");
                        return false;
                    }
                }
            });
        }

    });


</script>
